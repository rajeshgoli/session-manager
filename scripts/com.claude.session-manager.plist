<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.claude.session-manager</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/rajesh/Desktop/automation/session-manager/venv/bin/python</string>
        <string>-m</string>
        <string>src.main</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/tmp/session-manager.log</string>

    <key>StandardErrorPath</key>
    <string>/tmp/session-manager.log</string>

    <key>WorkingDirectory</key>
    <string>/Users/rajesh/Desktop/automation/session-manager</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin</string>
    </dict>

    <!-- Throttle restarts: wait 10 seconds between restart attempts -->
    <key>ThrottleInterval</key>
    <integer>10</integer>
</dict>
</plist>
